<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.AboutUsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/logoView"
        android:layout_width="201dp"
        android:layout_height="91dp"
        android:background="@drawable/img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/aboutUsHeading"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="@string/about_us"
        android:layout_marginTop="10dp"
android:textColor="@color/black"
        android:textSize="34sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoView" />

    <TextView
        android:id="@+id/aboutusText"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        android:text="@string/aboutusdetails"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsHeading" />

    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/aboutusText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="left"
        android:text="@string/more_about_us"
        android:textColor="@color/colorPr"
        android:layout_marginStart="28dp"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/madeinindia_image"
        android:layout_width="337dp"
        android:layout_height="132dp"
        android:src="@drawable/made_in_india"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutusText"
        />

    <TextView
        android:id="@+id/madeinindia_image_text"
        android:layout_width="228dp"
        android:layout_height="38dp"
        android:text="@string/madeinindia"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/madeinindia_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/healthy_treatments_image"
        android:layout_width="337dp"
        android:layout_height="132dp"
        android:src="@drawable/healthy_treatments"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/madeinindia_image_text"
        />

    <TextView
        android:id="@+id/healthy_treatments_image_text"
        android:layout_width="228dp"
        android:layout_height="38dp"
        android:text="@string/madeinindia"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/healthy_treatments_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/affordable_image"
        android:layout_width="337dp"
        android:layout_height="132dp"
        android:src="@drawable/affordable"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthy_treatments_image_text"
        />

    <TextView
        android:id="@+id/affordable_image_text"
        android:layout_width="228dp"
        android:layout_height="38dp"
        android:text="@string/madeinindia"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/affordable_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/safe_secure_image"
        android:layout_width="337dp"
        android:layout_height="132dp"
        android:src="@drawable/safe_secure"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affordable_image_text"
        />

    <TextView
        android:id="@+id/safe_secure_image_text"
        android:layout_width="228dp"
        android:layout_height="38dp"
        android:text="@string/madeinindia"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@+id/safe_secure_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>